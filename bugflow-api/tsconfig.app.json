{
  "extends": "../tsconfig.base.json",
        "strictPropertyInitialization": false,

  "compilerOptions": {
        "experimentalDecorators": true,             // âœ… Enables decorator syntax
    "emitDecoratorMetadata": true     ,
    "outDir": "dist",
    "types": ["node", "express"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts","src"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
